<%= render "shared/errors", obj: @comment %>

<%= render @post.categories %>
  <div class="page-header">
    <h3><%= @post.title %></h3>
      <small>
        posted by <%= link_to @post.creator.username, "#" %> <%= time_ago_in_words(@post.created_at) + " ago" %> |
        <%= link_to 'go to link', display_url(@post.url) %>
        | <i class="icon-user"></i>

        <div class="pull-right">
        [<%= link_to "edit", edit_post_path(@post) %>]
        [<%= link_to "delete", @post, method: :delete, data: {confirm: "Are you sure your want to delete this post?"} %>]
        </div>  
      </small>
  </div>
  
<h4><%= @post.description %></h4>

<%= form_for [@post, @comment] do |f| %>
  <div class="control-group">
    <%= f.text_area :body, class: "span12", rows: "7", placeholder: "Comment goes here" %>
  </div>

  <%= f.submit "Create comment", class: "btn btn-primary" %> 
<% end %>  

<h5>All Comments:</h5>

<% @post.comments.each do |comment| %>
  <p><em><%= comment.body %></em></p>
    <small class="muted">
      commented by <%= link_to comment.creator.username, "#" %>
      <%= time_ago_in_words(comment.created_at) + " ago" %>
      | <i class="icon-user"></i>
    </small>
<% end %>