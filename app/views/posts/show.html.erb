<%= render "shared/errors", obj: @comment %>
<div class="page-header" id="show_post">
  <%= render @post.categories %>
    <div class="pull-right"><%= link_to "Back to Posts", posts_path %></div>
    <h4><%= @post.title %></h4>
    <h5><%= @post.description %></h5>
      <small class="muted">
        posted by <%= link_to @post.creator.username, "#" %> <%= time_ago_in_words(@post.created_at) + " ago" %> |
        <%= link_to 'go to link', display_url(@post.url) %>
        | <i class="icon-user" id="glyphs"></i>        

        <div class="pull-right">
        [ <i class="icon-pencil" id="glyphs"></i> <%= link_to "Edit", edit_post_path(@post) %>
        | <i class="icon-trash" id="glyphs"></i> <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure your want to delete this post?"} %> ]
        </div>   
      </small>
</div>   

<% if logged_in? %>
    <%= form_for [@post, @comment] do |f| %>
      <div class="control-group">
        <%= f.text_area :body, class: "span12", rows: "7", placeholder: "Comment goes here" %>
      </div>

      <%= f.submit "Create comment", class: "btn btn-primary" %> 
    <% end %>
<% end %>  
  <div id="all_comments">
    <h4>All Comments</h4>
  </div>

<% @post.comments.each do |comment| %>
  <div id="comment_feed">
    <h5><%= comment.body %></h5>
    <i class="icon-user" id="user_show_icon"></i>
     <%= link_to comment.creator.username, "#" %> -
    <small class="muted">commented <%= time_ago_in_words(comment.created_at) + " ago" %>
      | <%= link_to "delete", "#" %>
    </small>
  </div>  
<% end %>
