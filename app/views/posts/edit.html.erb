<% if @post.errors.any? %>
  <div class="alert alert-error">
    <h5>Please fix the following errors:</h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class="page-header">
  <h2>Edit Post<small> - go ahead and do some editing!</small></h2>
</div> 
<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "span3", placeholder: "Title goes here" %>
    </div>

    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "span3", placeholder: "URL goes here" %>
    </div>

    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "span3", placeholder: "Description goes here", rows: "6" %>
    </div>

    <%= f.submit "Edit Post", class: "btn btn-primary" %>
  <% end %>
</div> 