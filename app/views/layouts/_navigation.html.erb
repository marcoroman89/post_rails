<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
 
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <%= link_to "Post Rails", root_path, :class => "brand" %>
 
      <div class="nav-collapse collapse">
        <ul class="nav">
          <% if logged_in? %>
            <li class="divider-vertical"></li>
            <li class="active"><%= link_to "All Posts", posts_path %></li>
            <li class="divider-vertical"></li>
          <li><%= link_to "About", about_path %></li>
          <% else %>
            <li class="active"><%= link_to 'Home',  root_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "All Posts", posts_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to 'About',  about_path %></li>
          <% end %>
        </ul>

        <ul class="nav pull-right">
          <% if logged_in? %>
            <li><%= link_to "New Post", new_post_path %></li>
            <li class="divider-vertical"></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Categories<span class="caret"></span>
              </a>  
              <ul class="dropdown-menu">
                <% Category.all.each do |category| %>
                  <li><%= link_to category.name, category_path(category) %></li>
                <% end %>

                <% if %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to (new_category_path) do %>
                      <i class="icon-plus"></i>
                      New Category
                    <% end %>  
                  </li>
                <% end %>
              </ul>
            </li>
            <li class="divider-vertical"></li>
            <li class="dropdown">
              <%= link_to("#", class: "dropdown-toggle", "data-toggle" => "dropdown") do %>
                <%= current_user.username %><span class='caret'></span>
              <% end %>

              <ul class="dropdown-menu">
                <li><%=link_to "#" do %><i class="icon-user" id="user_glyphs"></i>User Profile<% end %></li>
                <li><%= link_to "#" do %><i class="icon-pencil" id="user_glyphs"></i>Edit Profile<% end %></li>
                <li class="divider"></li>
                <li><%= link_to logout_path do %><i class="icon-circle-arrow-left" id="user_glyphs"></i>Logout<% end %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Register", "#" %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Login", login_path %></li>
          <% end %>    
        </ul>  
      </div>
    </div>
  </div>
</div>